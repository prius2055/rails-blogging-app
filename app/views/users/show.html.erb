<div class="user" >
 
    <%= render @user %>

   

      <div class='user-bio'>
        <p>bio </p>
        <p> <%=@user.bio %> </p>
      </div>

      <% @user.three_most_recent_post.each do |post| %>
    
        <div class='user-text'>
          <p>Post #<%= post.id %></p>
          <p><%= post.text %></p>
          <p style="text-align: right;"> Comments:<span><%= post.comments_counter %></span>, Likes: <span><%= post.likes_counter %></span> </p>
        </div>
   
      <% end %>
      
      
      
      <a href="/users/<%= @user.id%>/posts" ><button>See all Posts</button></a>


</div>



